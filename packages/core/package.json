{
  "name": "@bf-i18n/core",
  "version": "0.5.5",
  "description": "Core library for backend-friendly i18n",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "rails",
    "laravel",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/usapopopooon/bf-i18n#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usapopopooon/bf-i18n.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/usapopopooon/bf-i18n/issues"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^4.3.4"
  }
}
