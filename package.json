{
  "name": "bf-i18n",
  "version": "0.5.6",
  "private": true,
  "description": "Rails/Laravel i18n format compatible library for React/Vue",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "rails",
    "laravel",
    "react",
    "vue",
    "typescript",
    "yaml",
    "json",
    "php",
    "translation",
    "l10n",
    "frontend",
    "backend",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "20.10.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "playwright test",
    "e2e:serve": "node e2e/server.js",
    "lint": "eslint packages/*/src",
    "lint:fix": "eslint packages/*/src --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx}\"",
    "spell": "cspell \"packages/*/src/**/*.{ts,tsx}\"",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "cspell": "^9.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^1.0.0"
  }
}
